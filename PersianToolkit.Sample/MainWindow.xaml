<Window x:Class="PersianToolkit.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersianToolkit.Sample"
        mc:Ignorable="d"
        
        xmlns:pc="http://github.com/ghost1372/PersianToolkit"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Margin="10" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="btnDef" Content="Default Theme" Click="BtnDef_Click"/>
            <Button x:Name="btnDark" Content="Dark Theme" Click="BtnDark_Click"/>
            <Button x:Name="btnVio" Content="Violet Theme" Click="BtnVio_Click"/>
            <CheckBox x:Name="ShowHoliday" Content="Is Holiday Show?"/>
        </StackPanel>
        <pc:Calendar Name="pc" FontFamily="IranSans" pc:Holiday.ShowHoliday="{Binding ElementName=ShowHoliday, Path=IsChecked}"/>
        <pc:DatePicker/>
    </StackPanel>
</Window>
